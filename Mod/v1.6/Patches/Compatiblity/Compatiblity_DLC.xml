<?xml version="1.0" encoding="UTF-8"?>
<Patch>
  <Operation Class="PatchOperationSequence">
    <operations>
      <!-- Decorative tree gathering patch -->
      <li Class="PatchOperationAdd" MayRequire="Ludeon.RimWorld.Ideology">
        <xpath>Defs/ThingDef[plant/sowTags/li="DecorativeTree"]/statBases</xpath>
        <value>
          <VV_MinGrowthPlantGatherable>0.9</VV_MinGrowthPlantGatherable>
          <VV_PlantGatherCooldown>1</VV_PlantGatherCooldown>
          <VV_TreeResinGatherYield>1</VV_TreeResinGatherYield>
        </value>
      </li>

      <!-- Plant_Fireweed -->
      <Operation Class="PatchOperationConditional" MayRequire="Ludeon.RimWorld.Odyssey">
        <xpath>Defs/ThingDef[defName="Plant_Fireweed"]/comps</xpath>
        <nomatch Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[defName="Plant_Fireweed"]</xpath>
          <value><comps /></value>
        </nomatch>
      </Operation>
      <Operation Class="PatchOperationAdd" MayRequire="Ludeon.RimWorld.Odyssey">
        <xpath>Defs/ThingDef[defName="Plant_Fireweed"]/comps</xpath>
        <value>
          <li Class="VVRace.CompProperties_RepeatGatherable" />
        </value>
      </Operation>
      <Operation Class="PatchOperationAdd" MayRequire="Ludeon.RimWorld.Odyssey">
        <xpath>Defs/ThingDef[defName="Plant_Fireweed"]/statBases</xpath>
        <value>
          <VV_MinGrowthPlantGatherable>0.7</VV_MinGrowthPlantGatherable>
          <VV_PlantGatherCooldown>1</VV_PlantGatherCooldown>
          <VV_PlantHoneyGatherYield>1</VV_PlantHoneyGatherYield>
        </value>
      </Operation>

      <!-- Plant_Lotus -->
      <Operation Class="PatchOperationConditional" MayRequire="Ludeon.RimWorld.Odyssey">
        <xpath>Defs/ThingDef[defName="Plant_Lotus"]/comps</xpath>
        <nomatch Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[defName="Plant_Lotus"]</xpath>
          <value><comps /></value>
        </nomatch>
      </Operation>
      <Operation Class="PatchOperationAdd" MayRequire="Ludeon.RimWorld.Odyssey">
        <xpath>Defs/ThingDef[defName="Plant_Lotus"]/comps</xpath>
        <value>
          <li Class="VVRace.CompProperties_RepeatGatherable" />
        </value>
      </Operation>
      <Operation Class="PatchOperationAdd" MayRequire="Ludeon.RimWorld.Odyssey">
        <xpath>Defs/ThingDef[defName="Plant_Lotus"]/statBases</xpath>
        <value>
          <VV_MinGrowthPlantGatherable>0.7</VV_MinGrowthPlantGatherable>
          <VV_PlantGatherCooldown>1</VV_PlantGatherCooldown>
          <VV_PlantHoneyGatherYield>1</VV_PlantHoneyGatherYield>
        </value>
      </Operation>

      <!-- Empire enemy patch -->
      <li Class="PatchOperationAdd" MayRequire="Ludeon.RimWorld.Royalty">
        <xpath>Defs/FactionDef[defName="Empire"]/permanentEnemyToEveryoneExcept</xpath>
        <value>
          <li>VV_ViviFederation</li>
          <li>VV_PlayerVivi</li>
          <li>VV_PlayerExiledVivi</li>
          <li>VV_PlayerViviRefugee</li>
        </value>
      </li>
      
        <!-- Guests -->
      <li Class="PatchOperationAdd" MayRequire="Ludeon.RimWorld.Royalty">
        <xpath>Defs/QuestScriptDef/root[@Class="QuestNode_Sequence"]/nodes/li[@Class="QuestNode_IsSet"]/node[@Class="QuestNode_GetRandomPawnKindForFaction"]/choices</xpath>
        <order>Prepend</order>
        <value>
          <li>
            <factionDef>VV_ViviFederation</factionDef>
            <pawnKinds>
              <li>VV_RoyalVivi</li>
              <li>VV_ViviTribesman</li>
            </pawnKinds>
          </li>
        </value>
      </li>

      <!-- Mercenaries -->
      <li Class="PatchOperationAdd" MayRequire="Ludeon.RimWorld.Royalty">
        <xpath>Defs/QuestScriptDef/root[@Class="QuestNode_Sequence"]/nodes/li[@Class="QuestNode_GetRandomPawnKindForFaction"]/choices</xpath>
        <order>Prepend</order>
        <value>
          <li>
            <factionDef>VV_ViviFederation</factionDef>
            <pawnKinds>
              <li>VV_ViviGuard</li>
              <li>VV_ViviArcher</li>
            </pawnKinds>
          </li>  
        </value>
      </li>
      
      <!-- Meditation -->
      <li Class="PatchOperationAdd">
        <xpath>/Defs/MeditationFocusDef[defName="Natural"]/requiredBackstoriesAny</xpath>
        <value>
          <li>
            <categoryName>VV_SettlerBackstory</categoryName>
            <slot>Childhood</slot>
          </li>
        </value>
      </li>
    </operations>
  </Operation>

</Patch>