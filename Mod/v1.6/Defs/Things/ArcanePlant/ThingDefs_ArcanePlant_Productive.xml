<Defs>
  <!-- 물방울꽃 -->
  <ThingDef ParentName="VV_ArcanePlantProductive">
    <defName>VV_Waterdrops</defName>
    <label>waterdrops</label>
    <description>a arcane flower shaped like a water droplet that absorbs surrounding water and converts it into mana. It can also be planted on water, and the more adjacent water tiles there are, the more mana it produces. When it detects a nearby fire, it converts stored mana into water and ejects it to extinguish the fire.
\nWhen placed in the same room as a arcane plant farm, it reduces the mana consumption of the magical plants being cultivated.</description>
    <descriptionHyperlinks>
      <ThingDef>VV_CoolingPetal</ThingDef>
    </descriptionHyperlinks>

    <graphicData>
      <texPath>Things/Plants/VV_Waterdrops</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <uiIconOffset>(0,0.12)</uiIconOffset>

    <terrainAffordanceNeeded>VV_WaterOrLight</terrainAffordanceNeeded>
    <statBases>
      <MaxHitPoints>70</MaxHitPoints>
      <WorkToBuild>33000</WorkToBuild>
      <Beauty>10</Beauty>
      <BeautyOutdoors>10</BeautyOutdoors>
      <Flammability>0</Flammability>
      
      <VV_PlantGatherCooldown>3</VV_PlantGatherCooldown>
      <VV_PlantHoneyGatherYield>0.5</VV_PlantHoneyGatherYield>
    </statBases>

    <costList>
      <VV_CoolingPetal>20</VV_CoolingPetal>
    </costList>

    <comps>
      <li Class="VVRace.CompProperties_Mana">
        <manaCapacity>1000</manaCapacity>
        <manaGenerateRule Class="VVRace.ManaFluxRule_CompositeSum">
          <rules>
            <li Class="VVRace.ManaFluxRule_AdjacentWater">
              <manaFromOccupiedWater>500</manaFromOccupiedWater>
              <manaPerAdjacentWater>100</manaPerAdjacentWater>
            </li>
            <li Class="VVRace.ManaFluxRule_WeatherRainy">
              <mana>500</mana>
            </li>
          </rules>
        </manaGenerateRule>

        <manaConsumeRule Class="VVRace.ManaFluxRule_Constant">
          <mana>50</mana>
        </manaConsumeRule>
        <manaAbsorbPerDay>500</manaAbsorbPerDay>
      </li>

      <li Class="VVRace.CompProperties_RepeatGatherable" />

      <li Class="VVRace.CompProperties_ManaSensorExplosive">
        <requiredManaPct>0.1</requiredManaPct>
        
        <sensorRadius>3.7</sensorRadius>
        <sensorWorkerClass>VVRace.SensorWorker_Fire</sensorWorkerClass>

        <explosiveRadius>6.9</explosiveRadius>
        <explosiveCooldownTicks>1000~1000</explosiveCooldownTicks>
        <explosiveEffecterDef>ExtinguisherExplosion</explosiveEffecterDef>
        <explosiveDamageDef>VV_ExtinguishWithWater</explosiveDamageDef>
        <propagationSpeed>0.5</propagationSpeed>

        <postExplosionSpawnThingDef>Filth_Water</postExplosionSpawnThingDef>
        <postExplosionSpawnChance>0.15</postExplosionSpawnChance>
        <postExplosionSpawnThingCount>1</postExplosionSpawnThingCount>

        <applyDamageToExplosionCellsNeighbors>true</applyDamageToExplosionCellsNeighbors>
      </li>
    </comps>
    
    <researchPrerequisites>
      <li>VV_AdvancedArcaneBotany</li>
    </researchPrerequisites>

    <modExtensions>
      <li Class="VVRace.GrowingArcanePlantData">
        <ingredients>
          <VV_UnknownSeed>1</VV_UnknownSeed>
          <VV_Vivicream>120</VV_Vivicream>
          <VV_Pollen>150</VV_Pollen>
        </ingredients>

        <totalGrowDays>10</totalGrowDays>
        <maxHealth>300</maxHealth>
        <healthRegenNoDamagedByDays>30</healthRegenNoDamagedByDays>

        <maxMana>300</maxMana>
        <consumedManaByDay>80</consumedManaByDay>

        <manaSensitivity>Medium</manaSensitivity>
        <manageSensitivity>High</manageSensitivity>
        <temperatureSensitivity>Medium</temperatureSensitivity>
        
        <manageIntervalTicks>210000</manageIntervalTicks>
        <optimalTemperatureRange>12~39</optimalTemperatureRange>

        <successChanceCurve>
          <points>
            <li>(0,0)</li>
            <li>(0.3,0.15)</li>
            <li>(0.5,0.5)</li>
            <li>(0.7,0.8)</li>
            <li>(0.9,1)</li>
          </points>
        </successChanceCurve>
        <healthBonusAmountCurve>
          <points>
            <li>(0,0)</li>
            <li>(0.5,0)</li>
            <li>(0.75,0.75)</li>
            <li>(1,1.5)</li>
          </points>
        </healthBonusAmountCurve>
        <cleanlinessBonusAmountCurve>
          <points>
            <li>(-10,0)</li>
            <li>(-0.0001,0)</li>
            <li>(0,1)</li>
            <li>(0.2,1.5)</li>
            <li>(0.4,2.5)</li>
            <li>(0.6,4.5)</li>
            <li>(1.0,6)</li>
          </points>
        </cleanlinessBonusAmountCurve>
      </li>
    </modExtensions>
  </ThingDef>

