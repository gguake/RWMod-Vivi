      <maxMeshCount>25</maxMeshCount>
      <visualSizeRange>0.3~0.4</visualSizeRange>
      <topWindExposure>0.08</topWindExposure>
      <purpose>Beauty</purpose>
    </plant>
    <comps>
      <li Class="VVRace.CompProperties_RepeatGatherable" />
    </comps>
  </ThingDef>

  <ThingDef ParentName="VV_ArcaneFlowerBase">
    <defName>VV_Plant_FireArcaneFlower</defName>
    <label>red vivia</label>
    <description>A small, common arcane flower with red petals that grows in the area where Vivis live. It is known to grow around other arcane plants, drawn by their mana, and its petals take on different properties depending on the mana of the plants nearby. Fully grown flowers can have their petals harvested or their honey collected.</description>
    <descriptionHyperlinks>
      <ThingDef>VV_HeatingPetal</ThingDef>
    </descriptionHyperlinks>
    <graphicData>
      <texPath>Things/Plants/VV_ArcaneFlower_Red</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <plant>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>VV_HeatingPetal</harvestedThingDef>
      <harvestYield>2</harvestYield>
    </plant>
    <comps>
      <li Class="CompProperties_Glower">
        <glowRadius>1.9</glowRadius>
        <glowColor>(255,175,148,0)</glowColor>
      </li>
    </comps>
  </ThingDef>

