<Defs>
  <ThingDef Abstract="True" Name="VV_ArcaneFlowerBase" ParentName="PlantBase">
    <thingClass>VVRace.ViviFlower</thingClass>
    <selectable>true</selectable>
    <statBases>
      <MaxHitPoints>70</MaxHitPoints>
      <Beauty>5</Beauty>
      <BeautyOutdoors>5</BeautyOutdoors>
      <Nutrition>0.1</Nutrition>
      <VV_MinGrowthPlantGatherable>0.9</VV_MinGrowthPlantGatherable>
