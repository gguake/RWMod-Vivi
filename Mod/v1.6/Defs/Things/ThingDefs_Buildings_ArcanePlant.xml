<?xml version="1.0" encoding="UTF-8"?>
<Defs>
  <!-- 마법 식물 화분 -->
  <ThingDef ParentName="BuildingBase">
    <defName>VV_ArcanePlantPot</defName>
    <label>arcane plant pot</label>
    <description>a pot that you can plant arcane plants in. It is typically used to place arcane plants indoors or in places where plants cannot grow.</description>
    <descriptionHyperlinks>
    </descriptionHyperlinks>
    <thingClass>VVRace.ArcanePlantPot</thingClass>
    
    <graphicData>
      <texPath>Things/Building/VV_ArcanePlantPot</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(2.5, 2.5)</drawSize>
      <drawOffset>(0, 0, 0.15)</drawOffset>
      <shadowData>
        <volume>(0.55, 0.35, 0.3)</volume>
        <offset>(0, 0, -0.28)</offset>
      </shadowData>
      <damageData>
        <rect>(0.2,0.2,0.6,0.6)</rect>
      </damageData>
    </graphicData>

    <uiOrder>2401</uiOrder>
    <uiIconScale>1</uiIconScale>
    <uiIconOffset>(0, -0.1)</uiIconOffset>
    <altitudeLayer>LowPlant</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.3</fillPercent>
    <pathCost>14</pathCost>

    <statBases>
      <MaxHitPoints>160</MaxHitPoints>
      <WorkToBuild>800</WorkToBuild>
      <Mass>4</Mass>
      <Flammability>1.0</Flammability>
      <Beauty>1</Beauty>
    </statBases>
    <size>(1,1)</size>
    <rotatable>false</rotatable>

    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>30</costStuffCount>
    <costList>
      <VV_Fertilizer>10</VV_Fertilizer>
    </costList>

    <comps>
      <li Class="CompProperties_Forbiddable"/>
    </comps>
    
    <thingCategories>
      <li>VV_BuildingsVivi</li>
    </thingCategories>
    <minifiedDef>MinifiedThing</minifiedDef>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <building>
      <paintable>true</paintable>
    </building>

    <designationCategory>VV_Bulidings</designationCategory>
    <designationHotKey>Misc6</designationHotKey>

    <canOverlapZones>false</canOverlapZones>
    <researchPrerequisites>
      <li>VV_ArcaneBotany</li>
    </researchPrerequisites>
  </ThingDef>


  <!-- 마나 방출기 -->
  <ThingDef ParentName="BuildingBase">
    <defName>VV_ManaEmitter</defName>
    <label>mana emitter</label>
    <description>.</description>

    <thingClass>VVRace.ManaEmitter</thingClass>
    <tickerType>Normal</tickerType>

    <graphicData>
      <texPath>Things/Building/VV_ManaEmitter</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <shaderType>Transparent</shaderType>
      <drawSize>(2.0,2.0)</drawSize>
      <drawRotated>false</drawRotated>
      <damageData>
        <rect>(0.05,0.1,0.9,0.9)</rect>
      </damageData>
      <shadowData>
        <volume>(0.75, 0.35, 0.33)</volume>
      </shadowData>
    </graphicData>

    <uiOrder>2402</uiOrder>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <useHitPoints>True</useHitPoints>
    <fillPercent>0.3</fillPercent>
    <pathCost>50</pathCost>
    <statBases>
      <Mass>20</Mass>
      <WorkToBuild>4500</WorkToBuild>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>0.5</Flammability>
    </statBases>
    <size>(1,1)</size>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>

    <thingCategories>
      <li>VV_BuildingsVivi</li>
    </thingCategories>
    <minifiedDef>MinifiedThing</minifiedDef>

    <designationCategory>VV_Bulidings</designationCategory>
    
    <costList>
      <VV_Viviwax>70</VV_Viviwax>
      <VV_Fertilizer>40</VV_Fertilizer>
    </costList>

    <canOverlapZones>false</canOverlapZones>
    <comps>
      <li Class="VVRace.CompProperties_Mana">
        <manaGenerateRule Class="VVRace.ManaFluxRule_Refuelable">
          <mana>400</mana>
          <fuelDef>VV_Fertilizer</fuelDef>
        </manaGenerateRule>
      </li>

      <li Class="CompProperties_Refuelable">
        <fuelLabel>Fertilizer</fuelLabel>
        <fuelGizmoLabel>Fertilizer</fuelGizmoLabel>
        <fuelConsumptionRate>4</fuelConsumptionRate>
        <fuelCapacity>40</fuelCapacity>
        <initialFuelPercent>1</initialFuelPercent>
        <fuelMultiplier>1</fuelMultiplier>
        <fuelFilter>
          <thingDefs>
            <li>VV_Fertilizer</li>
          </thingDefs>
        </fuelFilter>
        <showFuelGizmo>true</showFuelGizmo>
        <showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
      </li>
    </comps>

    <researchPrerequisites>
      <li>VV_ArcaneBotany</li>
    </researchPrerequisites>
  </ThingDef>

</Defs>