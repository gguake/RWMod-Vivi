    </weaponTags>

    <verbs>
      <li Class="VVRace.VerbProperties_ChainLightning">
        <hasStandardCommand>true</hasStandardCommand>
        <warmupTime>1.5</warmupTime>
        <range>18.9</range>
        <stopBurstWithoutLos>true</stopBurstWithoutLos>

        <damageDef>Burn</damageDef>
