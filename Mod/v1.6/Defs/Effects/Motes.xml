  <ThingDef ParentName="MoteBase">
    <defName>VV_Mote_EverflowerCircle</defName>
    <thingClass>MoteAttached</thingClass>
    <altitudeLayer>MoteOverheadLow</altitudeLayer>
    <mote>
      <fadeInTime>0.1</fadeInTime>
      <fadeOutTime>0.8</fadeOutTime>
      <solidTime>0.1</solidTime>
      <growthRate>-0.5</growthRate>
    </mote>
    <graphicData>
      <texPath>Things/Mote/RadiationDistortion_B</texPath>
      <graphicClass>Graphic_MoteWithAgeSecs</graphicClass>
      <color>(1, 0.9, 0.6, 1)</color>
      <shaderType>MoteMultiplyAddCircular</shaderType>
      <shaderParameters>
        <_MultiplyTex>/Things/Mote/RadiationDistortion_B</_MultiplyTex>
        <_texAScale>0.3</_texAScale>
        <_texBScale>0.3</_texBScale>
        <_texAScrollSpeed>0.4</_texAScrollSpeed>
        <_texBScrollSpeed>-0.3</_texBScrollSpeed>
        <_texAScaleDist>0.5</_texAScaleDist>
        <_DistortionScale>0.5</_DistortionScale>
        <_Intensity>3</_Intensity>
      </shaderParameters>
      <drawSize>(6, 6)</drawSize>
    </graphicData>
  </ThingDef>


