  <Operation Class="PatchOperationConditional">
    <xpath>Defs/ThingDef[defName="Plant_Agave"]/comps</xpath>
    <nomatch Class="PatchOperationAdd">
      <xpath>Defs/ThingDef[defName="Plant_Agave"]</xpath>
      <value><comps /></value>
    </nomatch>
  </Operation>
  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[defName="Plant_Agave"]/comps</xpath>
    <value>
      <li Class="VVRace.CompProperties_RepeatGatherable" />
    </value>
  </Operation>
  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[defName="Plant_Agave"]/statBases</xpath>
    <value>
      <VV_MinGrowthPlantGatherable>0.99</VV_MinGrowthPlantGatherable>
      <VV_PlantGatherCooldown>4</VV_PlantGatherCooldown>
      <VV_PlantHoneyGatherYield>1.0</VV_PlantHoneyGatherYield>
