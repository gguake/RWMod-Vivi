    <weaponTags>
      <li>VV_ViviGuardian</li>
    </weaponTags>

    <initialWillRange>11~14</initialWillRange>
    <initialResistanceRange>38~58</initialResistanceRange>

    <isRoyal>true</isRoyal>
    <forcedBodyType>Female</forcedBodyType>
  </PawnKindDef>
  
