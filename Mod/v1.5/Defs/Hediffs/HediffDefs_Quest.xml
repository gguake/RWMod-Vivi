<?xml version="1.0" encoding="UTF-8"?>
<Defs>
  <HediffDef>
    <defName>VV_DreamumTranquilize</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>dreamum tranquilize</label>
    <description>Intoxicated with dreamum pollen, and their consciousness is getting blurry.</description>
    <defaultLabelColor>(0.7, 1.0, 0.7)</defaultLabelColor>
    
    <maxSeverity>1</maxSeverity>
    <lethalSeverity>1</lethalSeverity>
    <initialSeverity>0.001</initialSeverity>

    <comps>
      <li Class="HediffCompProperties_Immunizable">
        <compClass>VVRace.HediffComp_ImmunizableDreamum</compClass>
        <severityPerDayNotImmune>-0.08</severityPerDayNotImmune>
      </li>
    </comps>

    <stages>
      <li>
        <label>initial</label>
        <becomeVisible>false</becomeVisible>
      </li>
      <li>
        <label>initial</label>
        <minSeverity>0.1</minSeverity>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.1</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>minor</label>
        <minSeverity>0.2</minSeverity>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.2</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>moderate</label>
        <minSeverity>0.4</minSeverity>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.75</setMax>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.4</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>serious</label>
        <minSeverity>0.6</minSeverity>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.5</setMax>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.6</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>extreme</label>
        <minSeverity>0.8</minSeverity>
        <lifeThreatening>true</lifeThreatening>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.25</setMax>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.8</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

</Defs>