<?xml version="1.0" encoding="UTF-8"?>
<Defs>
  <HediffDef>
    <defName>VV_RoyalJelly</defName>
    <label>royal jelly effect</label>
    <description>.</description>
    <descriptionHyperlinks>
      <HediffDef>VV_RoyalVivi</HediffDef>
    </descriptionHyperlinks>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(1,0,0.5)</defaultLabelColor>

    <isBad>false</isBad>
    <priceImpact>false</priceImpact>
    <scenarioCanAdd>false</scenarioCanAdd>
    
    <comps>
      <li Class="VVRace.HediffCompProperties_RoyalJelly" />
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>45000~45000</disappearsAfterTicks>
        <showRemainingTime>true</showRemainingTime>
      </li>
      <li Class="HediffCompProperties_ChangeNeed">
        <needDef>VV_RoyalJelly</needDef>
        <percentPerDay>0.025</percentPerDay>
      </li>
    </comps>

    <stages>
      <li>
        <makeImmuneTo>
          <li>BadBack</li>
          <li>Frail</li>
          <li>Dementia</li>
          <li>Alzheimers</li>
          <li>Asthma</li>
        </makeImmuneTo>

        <statFactors>
          <LifespanFactor>2.0</LifespanFactor>
        </statFactors>
      </li>
    </stages>

    <modExtensions>
      <li Class="RPEF.RaceConstraint">
        <whitelist>
          <li>VV_Vivi</li>
        </whitelist>
      </li>
    </modExtensions>
  </HediffDef>

