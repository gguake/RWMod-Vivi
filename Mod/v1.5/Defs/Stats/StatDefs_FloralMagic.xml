<?xml version="1.0" encoding="UTF-8"?>
<Defs>
  <StatCategoryDef>
    <defName>VV_FloralMagic</defName>
    <label>Floral Magic</label>
    <displayOrder>70</displayOrder>
  </StatCategoryDef>

  <StatDef>
    <defName>VV_FloralMagic_Cooldown</defName>
    <label>cooldown</label>
    <category>VV_FloralMagic</category>
    <description>How long it takes before the magic can be activated again after it has been cast.</description>
    <defaultBaseValue>0</defaultBaseValue>
    <minValue>0</minValue>
    <formatString>{0} s</formatString>
    <toStringStyle>FloatOne</toStringStyle>
    <showIfUndefined>false</showIfUndefined>
    <displayPriorityInCategory>98</displayPriorityInCategory>
  </StatDef>

  <StatDef>
    <defName>VV_FloralMagic_ManaCost</defName>
    <label>mana cost</label>
    <category>VV_FloralMagic</category>
    <description>How much mana must be spent to perform this magic. It consumes the mana of the psychic linked Dreamberry.</description>
    <workerClass>StatWorker_PsyfocusCost</workerClass>
    <toStringStyle>PercentOne</toStringStyle>
    <defaultBaseValue>0</defaultBaseValue>
    <minValue>0</minValue>
    <showIfUndefined>false</showIfUndefined>
    <displayPriorityInCategory>99</displayPriorityInCategory>
  </StatDef>

  <StatDef>
    <defName>VV_FloralMagic_CastingTime</defName>
    <label>casting time</label>
    <category>VV_FloralMagic</category>
    <description>How long it takes to perform this magic.</description>
    <defaultBaseValue>1</defaultBaseValue>
    <minValue>0</minValue>
    <formatString>{0} s</formatString>
    <toStringStyle>FloatOne</toStringStyle>
    <showIfUndefined>false</showIfUndefined>
    <displayPriorityInCategory>98</displayPriorityInCategory>
  </StatDef>
  
  <StatDef>
    <defName>VV_FloralMagic_Range</defName>
    <label>range</label>
    <category>VV_FloralMagic</category>
    <description>The maximum distance to a target of this magic, or to the center of the target location.</description>
    <defaultBaseValue>25</defaultBaseValue>
    <minValue>0</minValue>
    <hideAtValue>0</hideAtValue>
    <showIfUndefined>false</showIfUndefined>
    <displayPriorityInCategory>97</displayPriorityInCategory>
  </StatDef>

  <StatDef>
    <defName>VV_FloralMagic_Duration</defName>
    <label>duration</label>
    <category>VV_FloralMagic</category>
    <description>How long the effects of this magic last.</description>
    <defaultBaseValue>0</defaultBaseValue>
    <minValue>0</minValue>
    <hideAtValue>0</hideAtValue>
    <formatString>{0} s</formatString>
    <showIfUndefined>false</showIfUndefined>
    <displayPriorityInCategory>96</displayPriorityInCategory>
  </StatDef>

  <StatDef>
    <defName>VV_FloralMagic_EffectRadius</defName>
    <label>effect radius</label>
    <category>VV_FloralMagic</category>
    <description>The radius of the area of effect of this magic.</description>
    <defaultBaseValue>0</defaultBaseValue>
    <minValue>0</minValue>
    <hideAtValue>0</hideAtValue>
    <showIfUndefined>false</showIfUndefined>
    <displayPriorityInCategory>95</displayPriorityInCategory>
  </StatDef>

</Defs>