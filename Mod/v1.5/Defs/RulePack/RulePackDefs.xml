<?xml version="1.0" encoding="UTF-8"?>
<Defs>
  <RulePackDef>
    <defName>VV_NamerPersonVivi</defName>
    <rulePack>
      <rulesStrings>
        <li>r_name->[first_name] [last_name]</li>

        <li>first_name->[vivi_name_prefix][vivi_name_base]</li>
        <li>last_name(p=3)->[vivi_flower_nouns]</li>
        <li>last_name->[vivi_name_prefix][vivi_name_base]</li>
      </rulesStrings>
      <rulesFiles>
        <li>vivi_flower_nouns->Words/VV_FlowerNouns</li>
        <li>vivi_name_prefix->Words/VV_NamePrefix</li>
        <li>vivi_name_base->Words/VV_NameBase</li>
        <li>colors->Words/Nouns/Colors</li>
      </rulesFiles>
    </rulePack>
  </RulePackDef>
  
  <RulePackDef>
    <defName>VV_NamerFactionVivi</defName>
    <rulePack>
      <rulesStrings>
        <li>r_name->[colors] independent vivi kingdom</li>
        <li>r_name->[vivi_adjective] vivi kingdom</li>
      </rulesStrings>
      <rulesFiles>
        <li>vivi_adjective->Words/VV_Faction_Adjective</li>
        <li>colors->Words/Nouns/Colors</li>
      </rulesFiles>
    </rulePack>
  </RulePackDef>
  
  <RulePackDef>
    <defName>VV_NamerNPCFactionVivi</defName>
    <rulePack>
      <rulesStrings>
        <li>r_name->[vivi_flower_nouns] vivi federation</li>
        <li>r_name->[colors] [vivi_flower_nouns] vivi federation</li>
      </rulesStrings>
      <rulesFiles>
        <li>vivi_flower_nouns->Words/VV_FlowerNouns</li>
        <li>colors->Words/Nouns/Colors</li>
      </rulesFiles>
    </rulePack>
  </RulePackDef>

  <RulePackDef>
    <defName>VV_NamerSettlementVivi</defName>
    <rulePack>
      <rulesStrings>
        <li>r_name->[colors] hive</li>
        <li>r_name->hive [position] [nature]</li>
      </rulesStrings>
      <rulesFiles>
        <li>colors->Words/Nouns/Colors</li>
        <li>nature->Words/VV_Faction_Nature</li>
        <li>position->Words/VV_Faction_Position</li>
      </rulesFiles>
    </rulePack>
  </RulePackDef>
</Defs>