  <ThingDef ParentName="BaseWeaponNeolithic">
    <defName>VV_Slingshot</defName>
    <label>vivi slingshot</label>
    <description>.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/VV_Slingshot</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.8</drawSize>
    </graphicData>
    <equippedAngleOffset>30</equippedAngleOffset>
    <rotateInShelves>false</rotateInShelves>
    <soundInteract>Bow_Recurve</soundInteract>

    <techLevel>Medieval</techLevel>
    <statBases>
      <MaxHitPoints>50</MaxHitPoints>
      <WorkToMake>2000</WorkToMake>
      <Mass>0.5</Mass>
      <AccuracyTouch>0.65</AccuracyTouch>
      <AccuracyShort>0.5</AccuracyShort>
      <AccuracyMedium>0.3</AccuracyMedium>
      <AccuracyLong>0.1</AccuracyLong>
      <RangedWeapon_Cooldown>0.8</RangedWeapon_Cooldown>
    </statBases>

    <thingCategories Inherit="False">
      <li>VV_ViviWeapon</li>
    </thingCategories>
    <weaponClasses Inherit="False">
      <li>Ranged</li>
      <li>RangedLight</li>
    </weaponClasses>
    <weaponTags Inherit="False">
      <li>VV_ViviWeaponRange</li>
      <li>NoRelic</li>
    </weaponTags>

    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>VV_Arrow_SlingshotStone</defaultProjectile>
        <warmupTime>1.0</warmupTime>
        <range>16.9</range>
        <soundCast>Bow_Small</soundCast>
      </li>
    </verbs>
    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>

    <costList>
      <WoodLog>20</WoodLog>
      <VV_Viviwax>10</VV_Viviwax>
    </costList>

    <recipeMaker>
      <recipeUsers>
        <li>CraftingSpot</li>
      </recipeUsers>
      <displayPriority>-520</displayPriority>
    </recipeMaker>
    
    <relicChance>0</relicChance>
    
    <tradeTags>
      <li>VV_ViviTool</li>
    </tradeTags>
  </ThingDef>

  <ThingDef ParentName="BaseProjectileNeolithic">
    <defName>VV_Arrow_SlingshotStone</defName>
    <label>stone</label>
    <graphicData>
      <texPath>Things/Mote/Stone</texPath>
