<?xml version="1.0" encoding="UTF-8"?>
<Defs>
  <!-- 예식용 창 -->
  <ThingDef ParentName="BaseWeapon">
    <defName>VV_RitualLance</defName>
    <label>vivi ritual lance</label>
    <description>.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/VV_RitualLance</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1.3</drawSize>
    </graphicData>
    <equippedAngleOffset>0</equippedAngleOffset>
    
    <techLevel>Medieval</techLevel>
    <statBases>
      <WorkToMake>50000</WorkToMake>
      <Mass>4</Mass>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-1.2</MoveSpeed>
    </equippedStatOffsets>
    <tradeNeverStack>true</tradeNeverStack>
    <relicChance>2</relicChance>

    <thingSetMakerTags><li>RewardStandardMidFreq</li></thingSetMakerTags>
    <thingCategories Inherit="False">
      <li>VV_ViviWeapon</li>
    </thingCategories>
    <weaponClasses>
      <li>Melee</li>
      <li>MeleePiercer</li>
    </weaponClasses>
    <weaponTags>
      <li>VV_ViviExotic</li>
      <li>Spear</li>
    </weaponTags>
    
    <comps>
      <li>
        <compClass>CompQuality</compClass>
      </li>
      <li Class="CompProperties_Art">
        <nameMaker>NamerArtWeaponMelee</nameMaker>
        <descriptionMaker>ArtDescription_WeaponMelee</descriptionMaker>
        <minQualityForArtistic>Excellent</minQualityForArtistic>
      </li>
    </comps>
    <smeltable>false</smeltable>
    <burnableByRecipe>true</burnableByRecipe>
    <notifyMapRemoved>true</notifyMapRemoved>

    <tools>
      <li>
        <label>shaft</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>12</power>
        <cooldownTime>1.1</cooldownTime>
      </li>
      <li>
        <label>point</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>30</power>
        <armorPenetration>0.5</armorPenetration>
        <cooldownTime>4.5</cooldownTime>

        <extraMeleeDamages>
          <li>
            <def>Stab</def>
            <amount>30</amount>
            <armorPenetration>1.0</armorPenetration>
            <chance>0.5</chance>
          </li>
        </extraMeleeDamages>
      </li>
    </tools>
    
    <costList>
      <Plasteel>120</Plasteel>
      <Silver>30</Silver>
      <VV_TitanicHornetWing>2</VV_TitanicHornetWing>
    </costList>
    
    <recipeMaker>
      <researchPrerequisites>
        <li>VV_RitualWeaponry</li>
      </researchPrerequisites>
      <skillRequirements>
        <Crafting>12</Crafting>
        <Artistic>8</Artistic>
      </skillRequirements>
      <displayPriority>-530</displayPriority>
    </recipeMaker>

    <tradeTags>
      <li>VV_ViviExotic</li>
    </tradeTags>

    <modExtensions>
      <li Class="RPEF.ConstraintModExtension">
        <def>VV_RaceConstraint</def>
      </li>
    </modExtensions>
  </ThingDef>

  <!-- 비비 엘텍스 바늘 -->
  <ThingDef ParentName="BaseWeapon">
    <defName>VV_EltexNeedle</defName>
    <label>vivi eltex needle</label>
    <description>.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/VV_Needle</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>1.3</drawSize>
    </graphicData>
    <equippedAngleOffset>-30</equippedAngleOffset>
    <soundInteract>Interact_BeatFire</soundInteract>

    <techLevel>Medieval</techLevel>
    <statBases>
      <WorkToMake>70000</WorkToMake>
      <Mass>1</Mass>
      <AccuracyTouch>1</AccuracyTouch>
      <AccuracyShort>1</AccuracyShort>
      <AccuracyMedium>1</AccuracyMedium>
      <AccuracyLong>1</AccuracyLong>
      <RangedWeapon_Cooldown>30.0</RangedWeapon_Cooldown>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-1.0</MoveSpeed>
    </equippedStatOffsets>
    <tradeNeverStack>true</tradeNeverStack>
    <relicChance>3</relicChance>

    <thingSetMakerTags><li>RewardStandardMidFreq</li></thingSetMakerTags>
    <thingCategories Inherit="False">
      <li>VV_ViviWeapon</li>
    </thingCategories>
    <weaponTags>
      <li>VV_ViviExotic</li>
      <li>VV_ViviGuardian</li>
    </weaponTags>

    <comps>
      <li>
        <compClass>CompQuality</compClass>
      </li>
      <li Class="CompProperties_Art">
        <nameMaker>NamerArtWeaponMelee</nameMaker>
        <descriptionMaker>ArtDescription_WeaponMelee</descriptionMaker>
        <minQualityForArtistic>Excellent</minQualityForArtistic>
      </li>
      <li Class="CompProperties_Biocodable">
        <biocodeOnEquip>true</biocodeOnEquip>
      </li>
    </comps>
    <smeltable>false</smeltable>
    <burnableByRecipe>true</burnableByRecipe>
    <notifyMapRemoved>true</notifyMapRemoved>

    <verbs>
      <li>
        <verbClass>VVRace.Verb_SpawnNeedle</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>VV_Projectile_EltexNeedle</defaultProjectile>
        <warmupTime>5.0</warmupTime>
        <range>44.9</range>
        <soundCast>Interact_BeatFire</soundCast>
        <rangedFireRulepack>Combat_RangedFire_Thrown</rangedFireRulepack>
      </li>
    </verbs>

    <tools>
      <li>
        <label>point</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>7</power>
        <armorPenetration>0.3</armorPenetration>
        <cooldownTime>0.5</cooldownTime>
      </li>
    </tools>
    
    <costList>
      <Plasteel>70</Plasteel>
      <Gold>10</Gold>
      <VV_TitanicHornetWing>10</VV_TitanicHornetWing>
      <VV_LivingLeaf>80</VV_LivingLeaf>
    </costList>
    
    <recipeMaker>
      <researchPrerequisites>
        <li>VV_RitualWeaponry</li>
      </researchPrerequisites>
      <skillRequirements>
        <Crafting>17</Crafting>
      </skillRequirements>
      <displayPriority>-531</displayPriority>
    </recipeMaker>

    <tradeTags>
      <li>VV_ViviExotic</li>
    </tradeTags>

    <modExtensions>
      <li Class="RPEF.ConstraintModExtension">
        <def>VV_RaceConstraint</def>
      </li>
    </modExtensions>
  </ThingDef>

  <ThingDef ParentName="BaseProjectileNeolithic">
    <defName>VV_Projectile_EltexNeedle</defName>
    <label>eltex needle</label>
    <thingClass>VVRace.Needle</thingClass>
    <graphicData>
      <texPath>Things/Item/Equipment/VV_NeedleProjectile</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1.5</drawSize>
      <shaderType>MotePawnBodyGlow</shaderType>
    </graphicData>

    <projectile Class="VVRace.NeedleProperties">
      <damageDef>Stab</damageDef>
      <damageAmountBase>11</damageAmountBase>
      <stoppingPower>1.1</stoppingPower>
      <armorPenetrationBase>0.3</armorPenetrationBase>
      <speed>49</speed>

      <maxAttackCount>7</maxAttackCount>
      <targettingRadius>3</targettingRadius>
      <overrunTicks>3~8</overrunTicks>

      <maxAngleVelocity>10.1</maxAngleVelocity>
      <forceDirectingRadiusSqr>11</forceDirectingRadiusSqr>
    </projectile>

    <comps>
      <li Class="RPEF.CompProperties_TrailRenderer">
        <texPath>VFX/VV_NeedleTrail</texPath>
        <shader>MotePawnBodyGlow</shader>
        <color>(1.0, 0.8, 0.6)</color>
        <widthCurve>
          <points>
            <li>(0, 0)</li>
            <li>(1, 1)</li>
          </points>
        </widthCurve>
        <lineTextureMode>DistributePerSegment</lineTextureMode>
        
        <maxTrailPoint>15</maxTrailPoint>
        <refreshIntervalTicks>1</refreshIntervalTicks>
      </li>
    </comps>
  </ThingDef>
</Defs>