<?xml version="1.0" encoding="UTF-8"?>
<Defs>
  <ThingDef Abstract="True" Name="VV_ThinApparelBase" ParentName="ApparelMakeableBase">
    <smeltable>false</smeltable>
    <thingCategories>
      <li>VV_ViviApparel</li>
    </thingCategories>

    <apparel>
      <tags>
        <li>VV_ViviApparel</li>
      </tags>
      <canBeDesiredForIdeo>false</canBeDesiredForIdeo>
      <developmentalStageFilter>Child, Adult</developmentalStageFilter>
    </apparel>

    <tradeTags Inherit="False">
      <li>VV_ViviApparel</li>
    </tradeTags>
    
    <colorGenerator Class="ColorGenerator_White" />
    
    <modExtensions>
      <li Class="RPEF.RaceConstraint">
        <type>Required</type>
        <things>
          <li>VV_Vivi</li>
        </things>
      </li>
      <li Class="RPEF.BodyTypeConstraint">
        <type>Required</type>
        <bodyTypes>
          <li>Child</li>
          <li>Thin</li>
        </bodyTypes>
      </li>
      <li Class="RPEF.ApparelGraphicHook">
        <defaultBodyTypeGraphicOverride>Thin</defaultBodyTypeGraphicOverride>
      </li>
    </modExtensions>
  </ThingDef>

  <!-- 비비 작업복 -->
  <ThingDef ParentName="VV_ThinApparelBase">
    <defName>VV_BasicWorkerCostume</defName>
    <label>vivi basic worker costume</label>
    <description>.</description>
    <graphicData>
      <texPath>Things/Apparel/BasicWorkerCostume</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>

    <statBases>
      <MaxHitPoints>160</MaxHitPoints>
      <WorkToMake>2400</WorkToMake>
      <Mass>1</Mass>
      <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.6</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>1.2</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>2.5</EquipDelay>
      
      <ArmorRating_Blunt>0.04</ArmorRating_Blunt>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>0.2</MoveSpeed>
      <ToxicEnvironmentResistance MayRequire="Ludeon.RimWorld.Biotech">0.1</ToxicEnvironmentResistance>
    </equippedStatOffsets>

    <costStuffCount>60</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>

    <apparel>
      <useWornGraphicMask>true</useWornGraphicMask>
      <wornGraphicPath>Things/Apparel/BasicWorkerCostume</wornGraphicPath>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Legs</li>
      </bodyPartGroups>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>VV_ViviStartingApparel</li>
      </tags>
    </apparel>
    
    <recipeMaker>
      <recipeUsers>
        <li>CraftingSpot</li>
      </recipeUsers>
      <researchPrerequisite>VV_Apparels</researchPrerequisite>
      <displayPriority>3101</displayPriority>
    </recipeMaker>
  </ThingDef>

  <!-- 비비 제복 -->
  <ThingDef ParentName="VV_ThinApparelBase">
    <defName>VV_WorkerUniformDress</defName>
    <label>vivi worker uniform</label>
    <description>.</description>
    <graphicData>
      <texPath>Things/Apparel/WorkerUniformDress</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>

    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <WorkToMake>10000</WorkToMake>
      <Mass>1.0</Mass>
      <StuffEffectMultiplierArmor>0.32</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.45</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.45</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>2.5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <PainShockThreshold>0.05</PainShockThreshold>
      <MentalBreakThreshold>-0.05</MentalBreakThreshold>
      <ToxicEnvironmentResistance MayRequire="Ludeon.RimWorld.Biotech">0.1</ToxicEnvironmentResistance>
    </equippedStatOffsets>

    <costStuffCount>90</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>

    <apparel>
      <useWornGraphicMask>true</useWornGraphicMask>
      <wornGraphicPath>Things/Apparel/WorkerUniformDress</wornGraphicPath>
      <bodyPartGroups>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Torso</li>
        <li>Arms</li>
        <li>Hands</li>
        <li>Legs</li>
      </bodyPartGroups>
      <layers>
        <li>OnSkin</li>
      </layers>
    </apparel>
    
    <recipeMaker>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
      <researchPrerequisite>VV_AdvancedApparels</researchPrerequisite>
      <displayPriority>3102</displayPriority>
    </recipeMaker>
  </ThingDef>
  
  <!-- 비비 겨울 망토 -->
  <ThingDef ParentName="VV_ThinApparelBase">
    <defName>VV_WinterCape</defName>
    <label>vivi winter cape</label>
    <description>.</description>
    <graphicData>
      <texPath>Things/Apparel/WinterCape</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>

    <statBases>
      <MaxHitPoints>180</MaxHitPoints>
      <WorkToMake>7200</WorkToMake>
      <Mass>1.5</Mass>
      <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>2.2</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.5</EquipDelay>
      
      <Insulation_Heat>-6</Insulation_Heat>
    </statBases>
    
    <costStuffCount>80</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>

    <apparel>
      <useWornGraphicMask>true</useWornGraphicMask>
      <wornGraphicPath>Things/Apparel/WinterCape</wornGraphicPath>
      <bodyPartGroups>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Torso</li>
        <li>Arms</li>
      </bodyPartGroups>
      <layers>
        <li>Middle</li>
        <li>Shell</li>
      </layers>
      <drawData>
        <dataNorth>
          <layer>40</layer>
        </dataNorth>
      </drawData>
    </apparel>
    
    <recipeMaker>
      <researchPrerequisite>VV_Apparels</researchPrerequisite>
      <displayPriority>3300</displayPriority>
    </recipeMaker>
  </ThingDef>
  
  <!-- 비비 방수 코트 -->
  <ThingDef ParentName="VV_ThinApparelBase">
    <defName>VV_WaterproofCoat</defName>
    <label>vivi waterproof coat</label>
    <description>.</description>
    <graphicData>
      <texPath>Things/Apparel/WaterproofCoat</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>

    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <WorkToMake>7200</WorkToMake>
      <Mass>1.0</Mass>
      <StuffEffectMultiplierArmor>0.35</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.5</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.5</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.5</EquipDelay>
      
      <ArmorRating_Sharp>0.06</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.06</ArmorRating_Blunt>
    </statBases>
    <equippedStatOffsets>
      <ToxicEnvironmentResistance MayRequire="Ludeon.RimWorld.Biotech">0.1</ToxicEnvironmentResistance>
    </equippedStatOffsets>
    
    <costStuffCount>70</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>

    <apparel>
      <useWornGraphicMask>true</useWornGraphicMask>
      <wornGraphicPath>Things/Apparel/WaterproofCoat</wornGraphicPath>
      <bodyPartGroups>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Torso</li>
        <li>Arms</li>
        <li>Hands</li>
      </bodyPartGroups>
      <layers>
        <li>Middle</li>
        <li>Shell</li>
      </layers>
      <drawData>
        <dataNorth>
          <layer>40</layer>
        </dataNorth>
      </drawData>
    </apparel>
    
    <recipeMaker>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
      <researchPrerequisite>VV_AdvancedApparels</researchPrerequisite>
      <displayPriority>3301</displayPriority>
    </recipeMaker>

    <modExtensions>
      <li Class="RPEF.ThoughtConstraint">
        <rule>OnAppliedPawn</rule>
        <type>Blacklist</type>
        <thoguhts>
          <li>SoakingWet</li>
        </thoguhts>
      </li>
    </modExtensions>
  </ThingDef>
</Defs>