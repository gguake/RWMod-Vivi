<?xml version="1.0" encoding="UTF-8"?>
<Defs>
  <ThingDef ParentName="VV_ArcanePlantProductive">
    <defName>VV_Dreamum</defName>
    <label>dreamum</label>
    <description>a rare arcane flower found near ancient Vivi nest ruins. The scent or pollen of Dreamum can quickly put one to sleep, but Vivi are unaffected. Dreamum often spreads its pollen on the surrounding ground, and non-Vivi creatures nearby may become intoxicated by it.
\nBecause it is only rarely found around Vivi ruins, it is considered a sacred flower by the Vivi and is known to have protected the city from invaders with a giant Dreamum at the center of the ancient Vivi empireâ€™s capital.</description>
    <thingClass>VVRace.ArcanePlant_Dreamum</thingClass>

    <graphicData>
      <texPath>Things/Plants/VV_Dreamum</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>

    <statBases>
      <MarketValue>400</MarketValue>
      <MaxHitPoints>90</MaxHitPoints>
      <Beauty>15</Beauty>
      <BeautyOutdoors>15</BeautyOutdoors>

      <VV_PlantGatherCooldown>2.1</VV_PlantGatherCooldown>
      <VV_PlantHoneyGatherYield>3.2</VV_PlantHoneyGatherYield>
    </statBases>

    <comps>
      <li Class="VVRace.CompProperties_GlowerArcanePlant">
        <glowRadius>6</glowRadius>
        <glowColor>(255,227,156,0)</glowColor>
      </li>
      
      <li Class="VVRace.CompProperties_RepeatGatherable" />

      <li Class="VVRace.CompProperties_Terraformer">
        <cooldownTicks>60000~90000</cooldownTicks>
        <radius>3.7</radius>
        <terraforms>
          <li><from>SoftSand</from><to>Sand</to></li>
          <li><from>Sand</from><to>Gravel</to></li>
          <li><from>Gravel</from><to>Soil</to></li>
          <li><from>Soil</from><to>SoilRich</to></li>
          <li><from>MossyTerrain</from><to>SoilRich</to></li>
          <li><from>MarshyTerrain</from><to>SoilRich</to></li>
        </terraforms>
      </li>

      <li Class="VVRace.CompProperties_FilthMakerArcanePlant">
        <filthDef>VV_FilthPollen</filthDef>
        <makeAmountPerDays>3~9</makeAmountPerDays>
        <radius>1.9</radius>
        <exceptCenter>true</exceptCenter>

        <spawnEffecter>VV_PollenEmitting</spawnEffecter>
      </li>
    </comps>
    
    <building>
      <deconstructible>false</deconstructible>
      <claimable>true</claimable>
    </building>
    
    <modExtensions>
      <li Class="VVRace.ManaExtension">
        <manaCapacity>900</manaCapacity>

        <manaConsumeRule Class="VVRace.ManaFluxRule_CompositeSum">
          <rules>
            <li Class="VVRace.ManaFluxRule_Constant">
              <mana>20</mana>
            </li>
            <li Class="VVRace.ManaFluxRule_AdjacentPollution">
              <manaFromOccupiedPollution>50</manaFromOccupiedPollution>
              <manaPerAdjacentPollution>25</manaPerAdjacentPollution>
            </li>
          </rules>
        </manaConsumeRule>
        <manaGenerateRule Class="VVRace.ManaFluxRule_AdjacentPlant">
          <manaPerAdjacentPlant>30</manaPerAdjacentPlant>
        </manaGenerateRule>
      </li>

      <li Class="VVRace.ArcanePlantExtension">
        <zeroManaDamageByChance>1~2</zeroManaDamageByChance>
        <zeroManaDurableTicks>180000</zeroManaDurableTicks>
      </li>
    </modExtensions>

    <tradeTags Inherit="False">
      <li>VV_Dreamum</li>
    </tradeTags>
  </ThingDef>

</Defs>