<?xml version="1.0" encoding="UTF-8"?>
<Defs>
  <ThingDef ParentName="VV_ArtificialPlantProductive">
    <defName>VV_Peacebloom</defName>
    <label>peacebloom</label>
    <description>.</description>

    <graphicData>
      <texPath>Things/Plants/VV_Purifier</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>

    <statBases>
      <MarketValue>800</MarketValue>
      <MaxHitPoints>150</MaxHitPoints>
      <Beauty>18</Beauty>
      <BeautyOutdoors>18</BeautyOutdoors>
    </statBases>

    <comps>
      <li Class="CompProperties_Studiable">
        <cost>10</cost>
        <completedLetterTitle>{PARENT_label} studied: {RESEARCH} unlocked</completedLetterTitle>
        <completedLetterText>By studying the {PARENT_label}, {STUDIER_labelShort} has acquired the insight needed for the research project(s) {RESEARCH}.\n\nYour researchers can now use research benches to begin researching how to actually use the technology.</completedLetterText>
        <completedLetterDef>PositiveEvent</completedLetterDef>
      </li>
    </comps>
    
    <building>
      <deconstructible>false</deconstructible>
      <claimable>true</claimable>
    </building>
    
    <modExtensions>
      <li Class="VVRace.ArtificialPlantModExtension">
        <germinateWeight>0</germinateWeight>

        <energyCapacity>777</energyCapacity>
        <initialEnergyPercent>1.0</initialEnergyPercent>
        <zeroEnergyDamageByChance>1~1</zeroEnergyDamageByChance>

        <energyConsumeRule Class="VVRace.EnergyRule_Constant">
          <energy>7</energy>
        </energyConsumeRule>
        <energyGenerateRule Class="VVRace.EnergyRule_AdjacentArtificialPlant">
          <energyByAdjacentArtificialPlant>21</energyByAdjacentArtificialPlant>
        </energyGenerateRule>
      </li>
    </modExtensions>

    <tradeTags Inherit="False">
      <li>VV_Peacebloom</li>
    </tradeTags>
  </ThingDef>

</Defs>