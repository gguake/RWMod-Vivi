<?xml version="1.0" encoding="UTF-8"?>
<Defs>
  <!-- 꿈송이 제단 -->
  <ThingDef ParentName="BuildingBase">
    <defName>VV_DreamumAltar</defName>
    <thingClass>VVRace.DreamumAltar</thingClass>
    <label>altar of peacebloom</label>
    <description>.</description>
    <descriptionHyperlinks>
      <ThingDef>VV_Dreamum</ThingDef>
    </descriptionHyperlinks>

    <drawerType>MapMeshAndRealTime</drawerType>
    <graphicData>
      <texPath>Things/Building/Special/ArchonexusCore</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(13, 13)</drawSize>
      <shadowData>
        <volume>(9.8, 1, 8)</volume>
        <offset>(0,0,-0.66)</offset>
      </shadowData>
    </graphicData>
    <tickerType>Normal</tickerType>
    
    <uiOrder>3000</uiOrder>
    <uiIconScale>0.8</uiIconScale>
    <altitudeLayer>Building</altitudeLayer>
    <passability>Impassable</passability>
    <fillPercent>1.0</fillPercent>

    <statBases>
      <MaxHitPoints>10000</MaxHitPoints>
      <WorkToBuild>22220</WorkToBuild>
      <Mass>1000</Mass>
      <Flammability>0.0</Flammability>
    </statBases>
    <size>(13, 13)</size>
    <rotatable>false</rotatable>

    <hasInteractionCell>true</hasInteractionCell>
    <interactionCellOffset>(0,0,-6)</interactionCellOffset>

    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <building>
      <allowAutoroof>false</allowAutoroof>
      <soundAmbient>ArchonexusCore_Ambience</soundAmbient>
      <deconstructible>false</deconstructible>
      <claimable>false</claimable>
    </building>
    <designationCategory>VV_Bulidings</designationCategory>

    <comps>
      <li Class="CompProperties_MoteEmitter">
        <mote>VV_Mote_PsychicConditionCauserEffect</mote>
        <emissionInterval>2500</emissionInterval>
        <soundOnEmission>Archonexus_Throb</soundOnEmission>
      </li>
    </comps>

    <placeWorkers>
      <li>PlaceWorker_NotUnderRoof</li>
    </placeWorkers>
    
    <costList>
      <VV_Viviwax>1000</VV_Viviwax>
      <VV_Vivicream>700</VV_Vivicream>
      <VV_Fertilizer>300</VV_Fertilizer>
      <VV_Propolis>220</VV_Propolis>
    </costList>

    <canOverlapZones>false</canOverlapZones>
    <researchPrerequisites>
      <li>VV_PlantGigantism</li>
    </researchPrerequisites>

    <modExtensions>
      <li Class="VVRace.ManaExtension">
        <manaCapacity>22220</manaCapacity>

        <manaConsumeRule Class="VVRace.ManaFluxRule_Constant">
          <mana>2220</mana>
        </manaConsumeRule>
      </li>
    </modExtensions>
  </ThingDef>

  <ThingDef Name="Mote_PsychicConditionCauserEffect" ParentName="MoteBase">
    <defName>VV_Mote_PsychicConditionCauserEffect</defName>
    <mote>
      <fadeInTime>0.3</fadeInTime>
      <solidTime>1.2</solidTime>
      <fadeOutTime>2.0</fadeOutTime>
    </mote>
    <graphicData>
      <graphicClass>Graphic_MoteWithAgeSecs</graphicClass>
      <texPath>Things/Mote/PsychicConditionCauserMask</texPath>
      <shaderType>MotePsychicConditionCauser</shaderType>
      <shaderParameters>
        <_distortionIntensity>0.05</_distortionIntensity>
        <_brightnessMultiplier>1.4</_brightnessMultiplier>
        <_distortionScale>35</_distortionScale>
      </shaderParameters>
      <drawSize>60</drawSize>
    </graphicData>
  </ThingDef>
</Defs>