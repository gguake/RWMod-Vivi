<?xml version="1.0" encoding="UTF-8"?>
<Defs>
  <!-- 꿈송이 제단 -->
  <ThingDef ParentName="BuildingBase">
    <defName>VV_DreamumAltar</defName>
    <thingClass>VVRace.Building_DreamumAltar</thingClass>
    <label>altar of peacebloom</label>
    <description>.</description>
    <descriptionHyperlinks>
      <ThingDef>VV_Dreamum</ThingDef>
    </descriptionHyperlinks>

    <drawerType>MapMeshAndRealTime</drawerType>
    <graphicData>
      <texPath>Things/Building/VV_DreamumAltar</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(26, 26)</drawSize>
      <shadowData>
        <volume>(9.8, 1, 8)</volume>
        <offset>(0,0,-0.66)</offset>
      </shadowData>
    </graphicData>
    <tickerType>Normal</tickerType>
    <destroyable>false</destroyable>
    
    <uiOrder>3000</uiOrder>
    <uiIconScale>0.8</uiIconScale>
    <altitudeLayer>Building</altitudeLayer>
    <passability>Impassable</passability>
    <fillPercent>1.0</fillPercent>

    <statBases>
      <MaxHitPoints>10000</MaxHitPoints>
      <WorkToBuild>22220</WorkToBuild>
      <Mass>1000</Mass>
      <Flammability>0.0</Flammability>
    </statBases>
    <size>(13, 13)</size>
    <rotatable>false</rotatable>

    <hasInteractionCell>true</hasInteractionCell>
    <interactionCellOffset>(0,0,-7)</interactionCellOffset>

    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <building>
      <allowAutoroof>false</allowAutoroof>
      <soundAmbient>ArchonexusCore_Ambience</soundAmbient>
      <deconstructible>false</deconstructible>
      <claimable>false</claimable>
    </building>

    <placeWorkers>
      <li>PlaceWorker_NotUnderRoof</li>
    </placeWorkers>
    
    <costList>
      <VV_Viviwax>1000</VV_Viviwax>
      <VV_Vivicream>700</VV_Vivicream>
      <VV_Fertilizer>300</VV_Fertilizer>
      <VV_Propolis>220</VV_Propolis>
    </costList>

    <canOverlapZones>false</canOverlapZones>

    <comps>
      <li Class="VVRace.CompProperties_DreamumTower">
        <completeProgressTicks>2400000</completeProgressTicks>

        <graphicData>
          <texPath>Things/Building/VV_DreamumAltarFlower</texPath>
          <graphicClass>VVRace.Graphic_Conditional</graphicClass>
          <shaderType>CutoutPlant</shaderType>
          <drawSize>(26, 26)</drawSize>
        </graphicData>
        <growthEffect>VV_GrowthDreamumTower</growthEffect>
        <graphicChangeProgressPct>
          <li>0.1</li>
          <li>0.25</li>
          <li>0.35</li>
          <li>0.75</li>
          <li>0.9</li>
        </graphicChangeProgressPct>

        <bigThreatActivatePct>0.35~0.9</bigThreatActivatePct>

        <hazeConditionDef>VV_DreamumHaze</hazeConditionDef>
        <hazeActivatePct>0.7</hazeActivatePct>
        <hazeWorldRadiusMax>200</hazeWorldRadiusMax>
      </li>
    </comps>

    <modExtensions>
      <li Class="VVRace.ManaExtension">
        <manaCapacity>22220</manaCapacity>
        <initialManaPercent>0</initialManaPercent>

        <manaConsumeRule Class="VVRace.ManaFluxRule_DreamumAltar">
          <mana>2220</mana>
        </manaConsumeRule>
      </li>
    </modExtensions>
  </ThingDef>
</Defs>