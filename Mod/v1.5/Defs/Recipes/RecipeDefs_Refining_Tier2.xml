<?xml version="1.0" encoding="UTF-8"?>
<Defs>
  <!-- 생체 가닥 정제 -->
  <RecipeDef>
    <defName>VV_MakeLifestrand</defName>
    <label>making lifestrand</label>
    <description>Process devilstrand with various materials to create lifestrand.</description>
    <descriptionHyperlinks>
      <ThingDef>VV_LivingLeaf</ThingDef>
      <ThingDef>VV_TitanicHornetWing</ThingDef>
    </descriptionHyperlinks>

    <jobString>making lifestrand.</jobString>
    <workAmount>2500</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <workSkill>Crafting</workSkill>

    <effectWorking>Tailor</effectWorking>
    <soundWorking>Recipe_Tailor</soundWorking>
    <uiIconThing>VV_Lifestrand</uiIconThing>

    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>DevilstrandCloth</li>
          </thingDefs>
        </filter>
        <count>40</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>VV_LivingLeaf</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>VV_TitanicHornetWing</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>DevilstrandCloth</li>
        <li>VV_LivingLeaf</li>
        <li>VV_TitanicHornetWing</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <VV_Lifestrand>40</VV_Lifestrand>
    </products>
    <researchPrerequisite>VV_Lifestrand</researchPrerequisite>

    <skillRequirements>
      <Crafting>8</Crafting>
    </skillRequirements>
  </RecipeDef>

  <!-- 대량 꿀 정제 -->
  <RecipeDef>
    <defName>VV_ExtractBulkHoney</defName>
    <label>extract bulk honey</label>
    <description>Extract pure honey from a large amount of Vivi honey.</description>

    <jobString>extrating honey.</jobString>
    <workAmount>400</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>

    <effectWorking>Cremate</effectWorking>
    <soundWorking>Recipe_Cremate</soundWorking>
    <uiIconThing>VV_FilteredHoney</uiIconThing>

    <allowMixingIngredients>true</allowMixingIngredients>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>VV_RawHoney</li>
          </thingDefs>
        </filter>
        <count>75</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>VV_RawHoney</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <VV_FilteredHoney>35</VV_FilteredHoney>
    </products>
  </RecipeDef>

  <!-- 대량 프로폴리스 정제 -->
  <RecipeDef>
    <defName>VV_ExtractBulkPropolis</defName>
    <label>refining bulk propolis</label>
    <description>Refine a large amount of propolis at once. It is much faster and more efficient than manual labor.</description>

    <jobString>refining propolis.</jobString>
    <workAmount>1800</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>

    <effectWorking>Cremate</effectWorking>
    <soundWorking>Recipe_Cremate</soundWorking>
    <uiIconThing>Neutroamine</uiIconThing>

    <allowMixingIngredients>true</allowMixingIngredients>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>VV_Propolis</li>
          </thingDefs>
        </filter>
        <count>20</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>VV_Propolis</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <MedicineHerbal>6</MedicineHerbal>
      <Neutroamine>6</Neutroamine>
    </products>
  </RecipeDef>

  <!-- 대량 비료 정제 -->
  <RecipeDef>
    <defName>VV_MakeFertilizerSeeds</defName>
    <label>make fertilizer from seeds</label>
    <description>Extract mana components from a large amount of unknown seeds to make fertilizers.</description>
    <jobString>making fertilizer from seeds.</jobString>
    <workAmount>1600</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>

    <effectWorking>Cremate</effectWorking>
    <soundWorking>Recipe_Cremate</soundWorking>
    <uiIconThing>VV_Fertilizer</uiIconThing>

    <allowMixingIngredients>true</allowMixingIngredients>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>VV_UnknownSeed</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>VV_Pollen</li>
          </thingDefs>
        </filter>
        <count>150</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>VV_UnknownSeed</li>
        <li>VV_Pollen</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <VV_Fertilizer>50</VV_Fertilizer>
    </products>
  </RecipeDef>
</Defs>