    <randomChosen>false</randomChosen>
    
    <displayCategory>VV_Race</displayCategory>
    <displayOrderInCategory>102</displayOrderInCategory>
    <biostatCpx>0</biostatCpx>
    <canGenerateInGeneSet>false</canGenerateInGeneSet>

    <bodyTypeOverrides>
      <Child>
        <overrideGraphicPath>Things/Pawn/Vivi/Body/Naked_Thin</overrideGraphicPath>
        <headOffset>(-0.09, 0.003)</headOffset>
      </Child>
      <Thin>
        <overrideGraphicPath>Things/Pawn/Vivi/Body/Naked_Thin</overrideGraphicPath>
        <headOffset>(-0.09, 0.003)</headOffset>
      </Thin>
      <Female>
        <overrideGraphicPath>Things/Pawn/Vivi/Body/Naked_Female</overrideGraphicPath>
        <headOffset>(-0.09, 0.04)</headOffset>
      </Female>
