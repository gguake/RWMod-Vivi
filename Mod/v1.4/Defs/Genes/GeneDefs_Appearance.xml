<?xml version="1.0" encoding="UTF-8"?>
<Defs>
  <!-- 헤드 및 헤어 -->
  <GeneDef>
    <defName>VV_HeadGene</defName>
    <label>vivi head</label>
    <description>.</description>
    <iconPath>UI/Icons/Xenotypes/Vivi</iconPath>
    <iconColor>(0.75, 0.75, 0.75)</iconColor>
    <randomChosen>false</randomChosen>
    
    <exclusionTags>
      <li>Jaw</li>
      <li>HairStyle</li>
    </exclusionTags>

    <endogeneCategory>Jaw</endogeneCategory>
    <displayCategory>VV_Race</displayCategory>
    <displayOrderInCategory>100</displayOrderInCategory>
    <biostatCpx>0</biostatCpx>
    <canGenerateInGeneSet>false</canGenerateInGeneSet>

    <forcedHeadTypes>
      <li>VV_Vivi_A</li>
      <li>VV_Vivi_B</li>
      <li>VV_Vivi_C</li>
    </forcedHeadTypes>
    
    <hairTagFilter>
      <whitelist>true</whitelist>
      <tags>
        <li>VV_Vivi</li>
      </tags>
    </hairTagFilter>

    <graphicData>
      <tattoosVisible>false</tattoosVisible>
    </graphicData>
  </GeneDef>
  
  <!-- 고유 바디 -->
  <GeneDef Class="VVRace.GeneDefExt">
    <defName>VV_BodyGene</defName>
    <label>vivi body</label>
    <description>.</description>
    <iconPath>UI/Icons/Xenotypes/Vivi</iconPath>
    <iconColor>(0.75, 0.75, 0.75)</iconColor>
    <randomChosen>false</randomChosen>
    
    <skinColorOverride>(255, 240, 236)</skinColorOverride>
    <randomBrightnessFactor>0</randomBrightnessFactor>
    
    <displayCategory>VV_Race</displayCategory>
    <displayOrderInCategory>102</displayOrderInCategory>
    <biostatCpx>0</biostatCpx>
    <canGenerateInGeneSet>false</canGenerateInGeneSet>

    <bodyTypeOverrides>
      <Child>
        <overrideGraphicPath>Things/Pawn/Vivi/Body/Naked_Thin</overrideGraphicPath>

        <useUniqueHeadOffset>true</useUniqueHeadOffset>
        <applyLifeStageHeadOffset>false</applyLifeStageHeadOffset>
        <headOffset>(0, 0.21)</headOffset>
      </Child>
      <Thin>
        <overrideGraphicPath>Things/Pawn/Vivi/Body/Naked_Thin</overrideGraphicPath>
        
        <useUniqueHeadOffset>true</useUniqueHeadOffset>
        <headOffset>(0, 0.28)</headOffset>
      </Thin>
      <Female>
        <overrideGraphicPath>Things/Pawn/Vivi/Body/Naked_Female</overrideGraphicPath>
        
        <useUniqueHeadOffset>true</useUniqueHeadOffset>
        <headOffset>(0.01, 0.34)</headOffset>
      </Female>
    </bodyTypeOverrides>
    
    <graphicData>
      <tattoosVisible>false</tattoosVisible>
    </graphicData>
  </GeneDef>
</Defs>