<?xml version="1.0" encoding="UTF-8"?>
<Defs>
  <ScenarioDef>
    <defName>VV_ViviStart</defName>
    <label>ViviStart</label>
    <description>.</description>
    <scenario>
      <summary>test summary</summary>
      <playerFaction>
        <def>PlayerFaction</def>
        <factionDef>VV_PlayerExiledVivi</factionDef>
      </playerFaction>
      <parts>
        <li Class="ScenPart_GameStartDialog">
          <def>GameStartDialog</def>
          <text>.</text>
          <closeSound>GameStartSting</closeSound>
        </li>

        <li Class="ScenPart_ConfigPage_ConfigureStartingPawns_Xenotypes">
          <def>ConfigurePawnsXenotypes</def>
          <pawnChoiceCount>1</pawnChoiceCount>
          <overrideKinds>
            <li>
              <xenotype>VV_Vivi</xenotype>
              <pawnKind>VV_PlayerExiledRoyalVivi</pawnKind>
            </li>
          </overrideKinds>
          <xenotypeCounts>
            <li>
              <xenotype>VV_Vivi</xenotype>
              <count>1</count>
              <description>adult vivi</description>
              <requiredAtStart>true</requiredAtStart>
              <allowedDevelopmentalStages>Adult</allowedDevelopmentalStages>
            </li>
          </xenotypeCounts>
        </li>

        <li Class="ScenPart_PawnFilter_Age">
          <def>PawnFilter_Age</def>
          <allowedAgeRange>18~24</allowedAgeRange>
        </li>
        
        <li Class="ScenPart_PlayerPawnsArriveMethod">
          <def>PlayerPawnsArriveMethod</def>
          <method>Standing</method>
        </li>

        <!-- 시작시 소유품 -->
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>VV_Vivicream</thingDef>
          <count>300</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>VV_FilteredHoney</thingDef>
          <count>150</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>VV_Straw</thingDef>
          <quality>Good</quality>
          <stuff>VV_Viviwax</stuff>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>VV_RepeatingCrossbow</thingDef>
          <quality>Normal</quality>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>TrapSpike</thingDef>
          <stuff>VV_Viviwax</stuff>
          <count>3</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>VV_ViviEgg</thingDef>
          <count>2</count>
        </li>
        
        <!-- 시작시 소유품 (분산) -->
        <li Class="ScenPart_ScatterThingsNearPlayerStart">
          <def>ScatterThingsNearPlayerStart</def>
          <thingDef>WoodLog</thingDef>
          <count>400</count>
        </li>
        
        <li Class="ScenPart_ScatterThingsNearPlayerStart">
          <def>ScatterThingsAnywhere</def>
          <thingDef>Steel</thingDef>
          <count>150</count>
        </li>
        
        <!-- 시작시 연구 -->
        <li Class="ScenPart_StartingResearch">
          <def>StartingResearch</def>
          <project>VV_BasicInfra</project>
        </li>
        <li Class="ScenPart_StartingResearch">
          <def>StartingResearch</def>
          <project>VV_BasicGathering</project>
        </li>
      </parts>
    </scenario>
  </ScenarioDef>
</Defs>