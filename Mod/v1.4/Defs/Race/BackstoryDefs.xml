<?xml version="1.0" encoding="UTF-8"?>
<Defs>
  <AlienRace.AlienBackstoryDef Abstract="True" Name="VV_ViviBackstory">
		<bodyTypeMale>Thin</bodyTypeMale>
		<bodyTypeFemale>Thin</bodyTypeFemale>
  </AlienRace.AlienBackstoryDef>


  <AlienRace.AlienBackstoryDef ParentName="VV_ViviBackstory">
    <defName>VV_ViviHiveChild</defName>
    <title>vivi hive child</title>
    <titleShort>hive child</titleShort>
    <baseDesc>[PAWN_nameDef] had an ordinary childhood in the nest.</baseDesc>
    <slot>Childhood</slot>
    <spawnCategories>
      <li>VV_SettlerBackstory</li>
    </spawnCategories>
    <skillGains>
      <li><key>Plants</key><value>2</value></li>
      <li><key>Construction</key><value>1</value></li>
      <li><key>Animals</key><value>-2</value></li>
    </skillGains>
  </AlienRace.AlienBackstoryDef>

  <AlienRace.AlienBackstoryDef ParentName="VV_ViviBackstory">
    <defName>VV_ViviSettler</defName>
    <title>vivi settler</title>
    <titleShort>settler</titleShort>
    <baseDesc>[PAWN_nameDef] is a Vivi belonging to the settlement.</baseDesc>
    <slot>Adulthood</slot>
    <spawnCategories>
      <li>VV_SettlerBackstory</li>
    </spawnCategories>
    <skillGains>
      <li><key>Construction</key><value>1</value></li>
      <li><key>Crafting</key><value>1</value></li>
      <li><key>Intellectual</key><value>-2</value></li>
    </skillGains>
  </AlienRace.AlienBackstoryDef>

  <AlienRace.AlienBackstoryDef ParentName="VV_ViviBackstory">
    <defName>VV_ViviExiled</defName>
    <title>vivi exiled</title>
    <titleShort>exiled</titleShort>
    <baseDesc>[PAWN_nameDef] was banished from the nest where he lived due to his different appearance. To survive, [PAWN_pronoun] learned various skills that are not necessary for ordinary royal vivi.</baseDesc>
    <slot>Adulthood</slot>
    <spawnCategories>
      <li>VV_PlayerExiledBackstory</li>
    </spawnCategories>
    <skillGains>
      <li><key>Mining</key><value>-3</value></li>
      <li><key>Social</key><value>-3</value></li>
      <li><key>Artistic</key><value>-3</value></li>
      <li><key>Melee</key><value>3</value></li>
      <li><key>Intellectual</key><value>3</value></li>
      <li><key>Medicine</key><value>3</value></li>
    </skillGains>
  </AlienRace.AlienBackstoryDef>
</Defs>