  <!-- 비료 제작 (썩은 시체) -->
  <RecipeDef>
    <defName>VV_MakeFertilizerCorpse</defName>
    <label>make fertilizer from bones</label>
    <description>.</description>
    <jobString>making fertilizer from bones.</jobString>
    <workAmount>500</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <workSkill>Plants</workSkill>
    <workSkillLearnFactor>0.1</workSkillLearnFactor>

    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Brewing</soundWorking>
    <uiIconThing>VV_Fertilizer</uiIconThing>

    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Corpses</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>Corpses</li>
      </categories>
      <disallowedCategories>
        <li>CorpsesMechanoid</li>
      </disallowedCategories>
      <specialFiltersToAllow>
        <li>AllowRotten</li>
      </specialFiltersToAllow>
      <specialFiltersToDisallow>
        <li>AllowFresh</li>
      </specialFiltersToDisallow>
    </fixedIngredientFilter>
    <defaultIngredientFilter>
      <categories>
        <li>Corpses</li>
      </categories>
      <specialFiltersToAllow>
        <li>AllowCorpsesColonist</li>
        <li MayRequire="Ludeon.RimWorld.Ideology">AllowCorpsesSlave</li>
        <li>AllowCorpsesStranger</li>
        <li>AllowRotten</li>
      </specialFiltersToAllow>
    </defaultIngredientFilter>
    
    <products>
      <VV_Fertilizer>25</VV_Fertilizer>
    </products>
  </RecipeDef>
  
  <!-- 비료 제작 (자원) -->
  <RecipeDef>
    <defName>VV_MakeFertilizerResource</defName>
    <label>make fertilizer from organics</label>
    <description>.</description>
    <jobString>making fertilizer from organics.</jobString>
    <workAmount>2000</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <workSkill>Plants</workSkill>
    <workSkillLearnFactor>0.1</workSkillLearnFactor>

    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Brewing</soundWorking>
    <uiIconThing>VV_Fertilizer</uiIconThing>

    <ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Foods</li>
            <li>PlantMatter</li>
          </categories>
          <disallowedCategories>
            <li>FoodMeals</li>
          </disallowedCategories>
        </filter>
        <count>3.75</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>Foods</li>
        <li>PlantMatter</li>
      </categories>
      <disallowedCategories>
        <li>FoodMeals</li>
      </disallowedCategories>
    </fixedIngredientFilter>
    <defaultIngredientFilter>
      <thingDefs>
        <li>Hay</li>
      </thingDefs>
      <categories>
        <li>FoodRaw</li>
      </categories>
      <disallowedCategories>
        <li>MeatRaw</li>
        <li>AnimalProductRaw</li>
      </disallowedCategories>
    </defaultIngredientFilter>
    
    <products>
      <VV_Fertilizer>50</VV_Fertilizer>
    </products>
  </RecipeDef>
</Defs>