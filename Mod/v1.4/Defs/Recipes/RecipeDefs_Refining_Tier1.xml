    <workSkillLearnFactor>0.05</workSkillLearnFactor>

    <effectWorking>Clean</effectWorking>
    <soundWorking>Recipe_Brewing</soundWorking>
    <uiIconThing>VV_Vivicream</uiIconThing>

    <ingredients>
    </ingredients>
