      <XenotypeDef>VV_Vivi</XenotypeDef>
    </descriptionHyperlinks>

    <jobString>making vivicream.</jobString>
    <workAmount>450</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
