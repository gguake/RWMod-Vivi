<?xml version="1.0" encoding="UTF-8"?>
<Defs>
  <!-- 생체 가닥 정제 -->
  <RecipeDef>
    <defName>VV_MakeLifestrand</defName>
    <label>making lifestrand</label>
    <description>.</description>
    <descriptionHyperlinks>
      <ThingDef>VV_LivingLeaf</ThingDef>
    </descriptionHyperlinks>

    <jobString>making lifestrand.</jobString>
    <workAmount>2000</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <workSkill>Crafting</workSkill>

    <effectWorking>Tailor</effectWorking>
    <soundWorking>Recipe_Tailor</soundWorking>
    <uiIconThing>VV_Lifestrand</uiIconThing>

    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>DevilstrandCloth</li>
          </thingDefs>
        </filter>
        <count>20</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>VV_Pollen</li>
          </thingDefs>
        </filter>
        <count>20</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>VV_LivingLeaf</li>
          </thingDefs>
        </filter>
        <count>20</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>DevilstrandCloth</li>
        <li>VV_GrassFiber</li>
        <li>VV_Pollen</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <VV_Lifestrand>20</VV_Lifestrand>
    </products>
    <researchPrerequisite>VV_Lifestrand</researchPrerequisite>

    <skillRequirements>
      <Crafting>8</Crafting>
    </skillRequirements>
  </RecipeDef>

  <!-- 대량 꿀 정제 -->
  <RecipeDef>
    <defName>VV_ExtractBulkHoney</defName>
    <label>extract bulk honey</label>
    <description>test</description>

    <jobString>extrating honey.</jobString>
    <workAmount>700</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>

    <effectWorking>Cremate</effectWorking>
    <soundWorking>Recipe_Cremate</soundWorking>
    <uiIconThing>VV_FilteredHoney</uiIconThing>

    <allowMixingIngredients>true</allowMixingIngredients>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>VV_RawHoney</li>
          </thingDefs>
        </filter>
        <count>70</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>VV_RawHoney</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <VV_FilteredHoney>21</VV_FilteredHoney>
    </products>
  </RecipeDef>

  <!-- 대량 프로폴리스 정제 -->
  <RecipeDef>
    <defName>VV_ExtractBulkPropolis</defName>
    <label>refining bulk propolis</label>
    <description>test</description>

    <jobString>refining propolis.</jobString>
    <workAmount>2000</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>

    <effectWorking>Cremate</effectWorking>
    <soundWorking>Recipe_Cremate</soundWorking>
    <uiIconThing>Neutroamine</uiIconThing>

    <allowMixingIngredients>true</allowMixingIngredients>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>VV_Propolis</li>
          </thingDefs>
        </filter>
        <count>15</count>
