    <apparel Class="VVRace.ApparelPropertiesExt">
      <useWornGraphicMask>true</useWornGraphicMask>
      <wornGraphicPath>Things/Apparel/WorkerUniformDress</wornGraphicPath>
      <bodyPartGroups>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Torso</li>
        <li>Arms</li>
        <li>Hands</li>
        <li>Legs</li>
      </bodyPartGroups>
      <layers>
        <li>OnSkin</li>
      </layers>
    </apparel>
    
    <recipeMaker>
      <skillRequirements>
        <Crafting>3</Crafting>
      </skillRequirements>
      <researchPrerequisite>VV_Apparels</researchPrerequisite>
      <displayPriority>3102</displayPriority>
    </recipeMaker>
  </ThingDef>
  
