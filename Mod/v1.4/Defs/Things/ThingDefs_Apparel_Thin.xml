      <texPath>Things/Apparel/WorkerUniformDress</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>

    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <WorkToMake>9000</WorkToMake>
      <Mass>1.0</Mass>
      <StuffEffectMultiplierArmor>0.32</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.3</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.3</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>2.5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <PainShockThreshold>0.05</PainShockThreshold>
      <MentalBreakThreshold>-0.05</MentalBreakThreshold>
      <ToxicEnvironmentResistance MayRequire="Ludeon.RimWorld.Biotech">0.1</ToxicEnvironmentResistance>
    </equippedStatOffsets>

    <costStuffCount>85</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
