<?xml version="1.0" encoding="UTF-8"?>
<Defs>
  <ThingDef Abstract="True" Name="VV_ThinApparelBase" ParentName="ApparelMakeableBase">
    <smeltable>false</smeltable>
    <thingCategories>
      <li>VV_ViviApparel</li>
    </thingCategories>

    <apparel Class="VVRace.ApparelPropertiesExt">
      <tags>
        <li>VV_ViviApparel</li>
      </tags>
      <canBeDesiredForIdeo>false</canBeDesiredForIdeo>
      <developmentalStageFilter>Child, Adult</developmentalStageFilter>
      <bodyTypeWhitelist>
        <li>Child</li>
        <li>Thin</li>
      </bodyTypeWhitelist>
      <fixedBodyType>Thin</fixedBodyType>
    </apparel>

    <tradeTags Inherit="False">
      <li>VV_ViviApparel</li>
    </tradeTags>
    
    <colorGenerator Class="ColorGenerator_White" />
  </ThingDef>

  <!-- 비비 작업복 -->
  <ThingDef ParentName="VV_ThinApparelBase">
    <defName>VV_BasicWorkerCostume</defName>
    <label>vivi basic worker costume</label>
    <description>.</description>
    <graphicData>
      <texPath>Things/Apparel/BasicWorkerCostume</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>

    <statBases>
      <MaxHitPoints>160</MaxHitPoints>
      <WorkToMake>2400</WorkToMake>
      <Mass>0.5</Mass>
      <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.6</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>1.2</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>2.5</EquipDelay>
      
      <ArmorRating_Blunt>0.04</ArmorRating_Blunt>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>0.2</MoveSpeed>
      <ToxicEnvironmentResistance MayRequire="Ludeon.RimWorld.Biotech">0.1</ToxicEnvironmentResistance>
    </equippedStatOffsets>

    <costStuffCount>70</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <costList>
      <VV_Vivicream>10</VV_Vivicream>
    </costList>

    <apparel Class="VVRace.ApparelPropertiesExt">
      <useWornGraphicMask>true</useWornGraphicMask>
      <wornGraphicPath>Things/Apparel/BasicWorkerCostume</wornGraphicPath>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Legs</li>
      </bodyPartGroups>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>VV_ViviStartingApparel</li>
      </tags>
    </apparel>
    
    <recipeMaker>
      <recipeUsers>
        <li>CraftingSpot</li>
      </recipeUsers>
      <researchPrerequisite>VV_Apparels</researchPrerequisite>
      <displayPriority>3101</displayPriority>
    </recipeMaker>
  </ThingDef>

  <!-- 비비 제복 -->
