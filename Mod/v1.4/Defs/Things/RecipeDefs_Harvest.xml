<Defs>
  <RecipeDef Class="VVRace.RecipeDef_Harvest">
    <defName>VV_GatherHoney</defName>
    <label>gather honey</label>
    <description>.</description>
    <jobString>Gathering honey.</jobString>
    
    <workAmount>600</workAmount>
