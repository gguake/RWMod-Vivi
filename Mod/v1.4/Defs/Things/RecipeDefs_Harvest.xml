    <recipeUsers>
      <li>VV_HarvestBarrel</li>
    </recipeUsers>
    <allowMixingIngredients>true</allowMixingIngredients>
    <targetCountAdjustment>10</targetCountAdjustment>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Plant_Rose</li>
            <li>Plant_Daylily</li>
            <li>Plant_Dandelion</li>
            <li>Plant_Astragalus</li>
            <li>Plant_Clivia</li>
            <li>Plant_Agave</li>
            <li>Plant_Strawberry</li>
            <li>Plant_Berry</li>
            <li>Plant_PincushionCactus</li>
            <li>Plant_SaguaroCactus</li>
            <li>Plant_Ambrosia</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Plant_Rose</li>
        <li>Plant_Daylily</li>
        <li>Plant_Dandelion</li>
        <li>Plant_Astragalus</li>
        <li>Plant_Clivia</li>
        <li>Plant_Agave</li>
        <li>Plant_Strawberry</li>
        <li>Plant_Berry</li>
        <li>Plant_PincushionCactus</li>
        <li>Plant_SaguaroCactus</li>
      </thingDefs>
    </fixedIngredientFilter>

    <products>
      <VV_RawHoney>15</VV_RawHoney>
    </products>
    <researchPrerequisite>VV_BasicGathering</researchPrerequisite>

    <harvestWorkerType>VVRace.HarvestWorker_Honey</harvestWorkerType>
    <maxPathDanger>Some</maxPathDanger>
  </RecipeDef>
  
