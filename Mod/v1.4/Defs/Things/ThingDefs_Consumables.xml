<?xml version="1.0" encoding="UTF-8"?>
<Defs>
  <!-- 꽃가루 -->
  <ThingDef ParentName="ResourceBase">
    <defName>VV_Pollen</defName>
    <label>vivi pollen</label>
    <description>.</description>
    <graphicData>
      <texPath>Things/Item/VV_ViviDust</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <thingCategories>
      <li>VV_ViviProduct</li>
    </thingCategories>

    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <soundInteract>Grain_Drop</soundInteract>
    <soundDrop>Grain_Drop</soundDrop>
    
    <useHitPoints>true</useHitPoints>
    <statBases>
      <Mass>0.01</Mass>
      <MarketValue>0.4</MarketValue>
      <MaxHitPoints>20</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <Nutrition>0.025</Nutrition>
      <FoodPoisonChanceFixedHuman>0.5</FoodPoisonChanceFixedHuman>
    </statBases>
    <stackLimit>75</stackLimit>

    <ingestible>
      <preferability>DesperateOnly</preferability>
      <tasteThought>VV_AtePollen</tasteThought>
      <foodType>VegetableOrFruit</foodType>
    </ingestible>

    <tradeability>None</tradeability>
    <tradeTags>
      <li>VV_ViviResource</li>
    </tradeTags>
  </ThingDef>
  
  <!-- 정제되지 않은 꿀 -->
  <ThingDef ParentName="OrganicProductBase">
    <defName>VV_RawHoney</defName>
    <label>vivi raw honey</label>
    <description>.</description>
    <graphicData>
      <texPath>Things/Item/VV_CombHoney</texPath>
    </graphicData>
    <socialPropernessMatters>true</socialPropernessMatters>
    <statBases>
      <Mass>0.03</Mass>
      <MaxHitPoints>20</MaxHitPoints>
      <Flammability>0.7</Flammability>
      <MarketValue>1.1</MarketValue>
      <Nutrition>0.05</Nutrition>
      <DeteriorationRate>3</DeteriorationRate>
      <Beauty>-2</Beauty>
    </statBases>
    <stackLimit>75</stackLimit>

    <comps>
			<li Class="CompProperties_Rottable">
				<daysToRotStart>60</daysToRotStart>
				<rotDestroys>true</rotDestroys>
			</li>
    </comps>

    <ingestible>
      <preferability>RawTasty</preferability>
      <foodType>AnimalProduct, Fluid</foodType>
    </ingestible>
    <thingCategories>
      <li>VV_ViviProduct</li>
    </thingCategories>
    
    <tradeTags>
      <li>VV_ViviResource</li>
      <li>VV_ViviHoney</li>
    </tradeTags>
  </ThingDef>
  
  <!-- 정제된 꿀 -->
  <ThingDef ParentName="OrganicProductBase">
    <defName>VV_FilteredHoney</defName>
    <label>vivi filtered honey</label>
    <description>.</description>
    <graphicData>
      <texPath>Things/Item/VV_FilteredHoney</texPath>
    </graphicData>
    <socialPropernessMatters>true</socialPropernessMatters>
    <statBases>
      <Mass>0.08</Mass>
      <MaxHitPoints>30</MaxHitPoints>
      <Flammability>0.7</Flammability>
      <MarketValue>4.8</MarketValue>
      <Nutrition>0.25</Nutrition>
      <Beauty>-2</Beauty>
    </statBases>
    <stackLimit>75</stackLimit>
    <comps>
    </comps>
    <ingestible>
      <preferability>RawTasty</preferability>
      <foodType>AnimalProduct, Fluid</foodType>
    </ingestible>
    <thingCategories>
      <li>VV_ViviProduct</li>
    </thingCategories>
    
    <tradeTags>
      <li>VV_ViviProduct</li>
      <li>VV_ViviHoney</li>
    </tradeTags>
  </ThingDef>

	<!-- 꿀 경단 -->
  <ThingDef ParentName="OrganicProductBase">
    <defName>VV_HoneyPollenCake</defName>
    <label>honey pollen cake</label>
    <description>test</description>
    <descriptionHyperlinks>
      <HediffDef>VV_ViviGrowthBoost</HediffDef>
    </descriptionHyperlinks>
    <graphicData>
      <texPath>Things/Item/VV_HoneyCake</texPath>
    </graphicData>
    <socialPropernessMatters>true</socialPropernessMatters>
    <thingCategories>
      <li>Foods</li>
    </thingCategories>

    <statBases>
      <Mass>0.3</Mass>
      <MarketValue>20</MarketValue>
      <Nutrition>1.0</Nutrition>
      <WorkToMake>450</WorkToMake>
      <Beauty>-2</Beauty>
    </statBases>

    <ingestible>
      <foodType>Meal</foodType>
      <preferability>MealSimple</preferability>
      <babiesCanIngest>true</babiesCanIngest>
      <ingestSound>Ingest_Pill</ingestSound>
      <maxNumToIngestAtOnce>1</maxNumToIngestAtOnce>
      <optimalityOffsetHumanlikes>10</optimalityOffsetHumanlikes>
      <optimalityOffsetFeedingAnimals>-15</optimalityOffsetFeedingAnimals>
			
      <tasteThought>VV_AtePollen</tasteThought>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>VV_ViviGrowthBoost</hediffDef>
        </li>
      </outcomeDoers>
    </ingestible>

    <stackLimit>10</stackLimit>
    <comps>
			<li Class="CompProperties_Rottable">
				<daysToRotStart>15</daysToRotStart>
				<rotDestroys>true</rotDestroys>
			</li>
    </comps>
    <allowedArchonexusCount>150</allowedArchonexusCount>
    
    <tradeTags>
      <li>VV_ViviProduct</li>
    </tradeTags>
  </ThingDef>

	<!-- 로열 젤리 -->
	<ThingDef ParentName="OrganicProductBase">
		<defName>VV_RoyalJelly</defName>
		<label>royal jelly</label>
		<description>.</description>
    <descriptionHyperlinks>
      <HediffDef>VV_RoyalJelly</HediffDef>
      <HediffDef>VV_ViviGrowthBoost</HediffDef>
    </descriptionHyperlinks>
		<graphicData>
			<texPath>Things/Item/VV_RoyalJelly</texPath>
		</graphicData>
		<socialPropernessMatters>true</socialPropernessMatters>
		<thingCategories>
			<li>Foods</li>
		</thingCategories>

		<statBases>
			<Mass>0.5</Mass>
			<MarketValue>40</MarketValue>
			<Nutrition>1.0</Nutrition>
		</statBases>

		<ingestible>
      <foodType>Meal</foodType>
			<preferability>MealTerrible</preferability>
      <babiesCanIngest>true</babiesCanIngest>
			<joy>0.2</joy>
			<joyKind>Gluttonous</joyKind>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>VV_RoyalJelly</hediffDef>
        </li>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>VV_ViviGrowthBoost</hediffDef>
        </li>
      </outcomeDoers>

      <maxNumToIngestAtOnce>1</maxNumToIngestAtOnce>
      <optimalityOffsetHumanlikes>-5</optimalityOffsetHumanlikes>
      <optimalityOffsetFeedingAnimals>-10</optimalityOffsetFeedingAnimals>
		</ingestible>

    <stackLimit>10</stackLimit>
		<comps>
			<li Class="CompProperties_Rottable">
				<daysToRotStart>60</daysToRotStart>
				<rotDestroys>true</rotDestroys>
			</li>
      <li Class="CompProperties_Drug">
        <chemical>VV_RoyalJelly</chemical>
        <addictiveness>0.000000001</addictiveness>
        <needLevelOffset>0.20</needLevelOffset>
        <listOrder>2000</listOrder>
      </li>
		</comps>
    
    <tradeTags>
      <li>VV_ViviProduct</li>
    </tradeTags>
	</ThingDef>

  <ChemicalDef>
    <defName>VV_RoyalJelly</defName>
    <label>royal jelly</label>
    <addictionHediff>VV_RoyalJellyAddiction</addictionHediff>
    <canBinge>false</canBinge>
    <onGeneratedAddictedToleranceChance>0</onGeneratedAddictedToleranceChance>
  </ChemicalDef>

  <HediffDef ParentName="AddictionBase">
    <defName>VV_RoyalJellyAddiction</defName>
    <label>royaljelly addiction</label>
    <description>.</description>
    <hediffClass>Hediff_Addiction</hediffClass>
    <everCurableByItem>false</everCurableByItem>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.1</severityPerDay>
        <showDaysToRecover>true</showDaysToRecover>
      </li>
    </comps>
    <stages>
      <li>
      </li>
      <li>
        <label>withdrawal</label>
      </li>
    </stages>
  </HediffDef>
</Defs>