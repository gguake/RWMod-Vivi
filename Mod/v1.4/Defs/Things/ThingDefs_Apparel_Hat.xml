<?xml version="1.0" encoding="UTF-8"?>
<Defs>
  <ThingDef Abstract="True" Name="VV_HatMakeableBase" ParentName="HatMakeableBase">
    <smeltable>false</smeltable>
    <thingCategories>
      <li>VV_ViviApparel</li>
    </thingCategories>

    <apparel>
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <tags>
        <li>VV_ViviApparel</li>
      </tags>
      <canBeDesiredForIdeo>false</canBeDesiredForIdeo>
    </apparel>

    <tradeTags Inherit="False">
      <li>VV_ViviApparel</li>
    </tradeTags>
    
    <colorGenerator Class="ColorGenerator_White" />
  </ThingDef>

  <!-- 비비 제복 모자 -->
  <ThingDef ParentName="VV_HatMakeableBase">
    <defName>VV_UniformHat</defName>
    <label>vivi uniform hat</label>
    <description>.</description>
    <graphicData>
      <texPath>Things/Apparel/VV_UniformHat</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(0.9,0.9)</drawSize>
    </graphicData>
    
    <statBases>
      <MaxHitPoints>180</MaxHitPoints>
      <WorkToMake>6000</WorkToMake>
      <Mass>1.4</Mass>
      <StuffEffectMultiplierArmor>0.3</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.4</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.4</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <PainShockThreshold>0.05</PainShockThreshold>
      <MentalBreakThreshold>-0.05</MentalBreakThreshold>
      <ToxicEnvironmentResistance MayRequire="Ludeon.RimWorld.Biotech">0.2</ToxicEnvironmentResistance>
    </equippedStatOffsets>

    <costStuffCount>50</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>

    <apparel>
      <useWornGraphicMask>true</useWornGraphicMask>
      <wornGraphicPath>Things/Apparel/VV_UniformHat</wornGraphicPath>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <layers>
        <li>Overhead</li>
      </layers>
      <developmentalStageFilter>Adult,Child</developmentalStageFilter>
    </apparel>

    <recipeMaker>
      <researchPrerequisite>VV_AdvancedApparels</researchPrerequisite>
      <displayPriority>3400</displayPriority>
    </recipeMaker>
  </ThingDef>

  <!-- 비비 제복 헬멧 -->
  <ThingDef ParentName="ArmorSmithableBase">
    <defName>VV_UniformHelmet</defName>
    <label>vivi uniform helmet</label>
    <description>.</description>
    <graphicData>
      <texPath>Things/Apparel/VV_UniformHelmet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(0.9,0.9)</drawSize>
    </graphicData>
    <thingCategories Inherit="False">
      <li>ArmorHeadgear</li>
      <li>VV_ViviApparel</li>
    </thingCategories>
    
    <statBases>
      <MaxHitPoints>240</MaxHitPoints>
      <WorkToMake>9000</WorkToMake>
      <Mass>1.2</Mass>
      <StuffEffectMultiplierArmor>0.8</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.07</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.07</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.2</MoveSpeed>
    </equippedStatOffsets>

    <smeltable>true</smeltable>
    <costStuffCount>70</costStuffCount>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>

    <apparel>
      <canBeDesiredForIdeo>false</canBeDesiredForIdeo>
      <useWornGraphicMask>true</useWornGraphicMask>
      <wornGraphicPath>Things/Apparel/VV_UniformHelmet</wornGraphicPath>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <layers>
        <li>Overhead</li>
      </layers>
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <tags>
        <li>VV_ViviCombatApparel</li>
      </tags>
    </apparel>

    <recipeMaker>
      <researchPrerequisite>VV_AdvancedApparels</researchPrerequisite>
      <displayPriority>3401</displayPriority>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>
    
    <tradeTags Inherit="False">
      <li>VV_ViviApparel</li>
    </tradeTags>
    
    <colorGenerator Class="ColorGenerator_White" />
  </ThingDef>

