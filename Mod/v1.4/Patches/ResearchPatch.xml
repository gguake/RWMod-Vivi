      <xpath>Defs/ResearchProjectDef[defName="DrugProduction"]/tags</xpath>
      <value>
        <li>VV_ViviStart</li>
      </value>
    </match>
  </Operation>
  

  <Operation Class="PatchOperationConditional">
    <xpath>Defs/ResearchProjectDef[defName="Devilstrand"]/tags</xpath>
